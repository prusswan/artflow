!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %title
      - if content_for?(:title)
        ArtFlow: #{yield :title}
      - else
        Artflow
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    = render 'layouts/header'
    = image_tag 'tagline.png', alt: 'Creative File Management Made Easy', id: 'tagline'

    .container
      %section#content
        - if notice
          %p.notification.notice
            = notice
        - if alert
          %p.notification.alert
            = alert

        = yield
      %section#sidebar
        %nav#functional_nav
          %ul
            - if current_user && current_user.designer?
              %li
                = link_to 'Add Creation', new_creation_path
            = yield :functional_nav
        = yield :sidebar
        %section#recent_activity
          %header
            %h1.ir#recent Recent Activity
          = render 'activity_items/recent'
        %section
          %header
            = link_to 'Clients', clients_path

    = render 'layouts/footer'
